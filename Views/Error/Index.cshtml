@model WDTAssignment2NWBA.Models.ErrorModel
<style>
    #errorMessage {
        color: red;
        font-weight: bold;
        padding-top: 20px;
    }

    #errorbox
    {
        width: 700px ;
        margin-left: auto ;
        margin-right: auto ;
        text-align: center;
    }
</style>
<div id="errorbox">
<div>
    <img src="~/Images/error/redCross.png" width ="200" height ="200" />
</div>
<h2>Error</h2>
<div>
    An error has occurred...    
</div>
<div id="errorMessage">
    @{
        string message = null;
        switch (Model.HttpStatusCode)
        {
            case 404:
                message = "The requested content was not found";        
                break;
            case 500:
                message = "time to sleep";
                break;
        }
    }
    
    @Html.Raw(message)
</div>
</div>